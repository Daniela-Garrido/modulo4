<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".Pagina7">

    <View
        android:id="@+id/translucido"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:background="@android:drawable/divider_horizontal_bright"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/edit1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:background="?attr/actionBarItemBackground"
        app:layout_constraintBottom_toBottomOf="@+id/translucido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_action_iconcaraedit" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Emilio Lagos"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/perfil2"
        app:layout_constraintStart_toStartOf="@+id/perfil2"
        app:layout_constraintTop_toBottomOf="@+id/perfil2" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Mi Perfil"
        android:textColor="@color/claro"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/perfil2"
        app:layout_constraintEnd_toEndOf="@+id/perfil2"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/perfil2" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/imagenfondo"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/imagen1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/circulo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_action_iccircl"
        app:layout_constraintBottom_toTopOf="@+id/textView30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView31" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/perfil2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/translucido"
        app:srcCompat="@mipmap/ic_launcherperfil2_round" />

    <Button
        android:id="@+id/btninfo"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@android:drawable/divider_horizontal_bright"
        android:text="Mi Informacion"
        app:icon="@drawable/ic_action_iconcaraena"
        app:layout_constraintBottom_toTopOf="@+id/btntarjetas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/translucido" />

    <Button
        android:id="@+id/btntarjetas"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@android:drawable/divider_horizontal_bright"
        android:text="Mis Tarjetas"
        app:icon="@drawable/ic_action_iconcaratar"
        app:layout_constraintBottom_toTopOf="@+id/btnOpciones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btninfo" />

    <Button
        android:id="@+id/btnOpciones"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@android:drawable/divider_horizontal_bright"
        android:text="Opciones"
        app:icon="@drawable/ic_action_iconcaraengr"
        app:layout_constraintBottom_toTopOf="@+id/btnayuda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btntarjetas" />

    <Button
        android:id="@+id/btnayuda"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@android:drawable/divider_horizontal_bright"
        android:text="Centro de Ayuda"
        app:icon="@drawable/ic_action_iconcaraenayu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOpciones" />
</androidx.constraintlayout.widget.ConstraintLayout>